<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical">
		    <!-- 基本信息模块 -->
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:padding="5dp">
			    <TextView 
			        android:id="@+id/txt_round_name"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="--"
			        android:textColor="#333333"
			        android:textSize="18sp"/>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="道路序号："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"/>
				    <TextView 
				        android:id="@+id/txt_roundid"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="--"
				        android:textColor="#333333"
				        android:textSize="15sp"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="起止名称："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"/>
				    <TextView 
				        android:id="@+id/txt_startend_name"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="--"
				        android:textColor="#333333"
				        android:textSize="15sp"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="方       向："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"/>
				    <TextView 
				        android:id="@+id/txt_direction"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="--"
				        android:textColor="#333333"
				        android:textSize="15sp"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="调查日期："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"/>
				    <TextView 
				        android:id="@+id/txt_time"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="--"
				        android:textColor="#333333"
				        android:textSize="15sp"/>
				</LinearLayout>
			</LinearLayout>
			 <!-- 基本信息模块 END-->
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="#eaeaea">
			</LinearLayout>
			<!-- 操作模块 -->
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="#eaeaea"
			    android:padding="5dp">
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="距离起点："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"
				        android:layout_gravity="center_vertical"/>
				    <EditText 
				        android:id="@+id/edt_distance"
				        android:layout_width="140dp"
				        android:layout_height="wrap_content"
				        android:textColor="#333333"
				        android:inputType="numberDecimal"
				        android:textSize="15sp"/>
				    <TextView 
				        android:text="米"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"
				        android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="附属结构："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"
				        android:layout_gravity="center_vertical"/>
				    <Spinner 
				        android:id="@+id/sp_structure"
				        android:layout_width="140dp"
				        android:layout_height="40dp"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="附属设施："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"
				        android:layout_gravity="center_vertical"/>
				    <Spinner 
				        android:id="@+id/sp_facility"
				        android:layout_width="140dp"
				        android:layout_height="40dp"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <TextView 
				        android:text="病害拍照："
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textColor="#000000"
				        android:textSize="15sp"
				        android:layout_gravity="center_vertical"/>
				   <Button 
				       android:id="@+id/btn_error_photo"
				       android:text="拍照"
				       android:layout_width="140dp"
				       android:layout_height="40dp"
				       android:paddingLeft="5dp"
				       android:paddingRight="5dp"
				       android:background="@drawable/corners_white">
				   </Button>
				</LinearLayout>
				<ListView 
				    android:id="@+id/error_photo_listview"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:cacheColorHint="#00000000"
				    android:dividerHeight="0dp"/>
				 <TextView 
			        android:text="备注："
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15sp"
			        android:layout_gravity="center_vertical"/>
				 <EditText 
				     android:id="@+id/edt_remark"
				     android:layout_width="fill_parent"
				     android:layout_height="wrap_content"
				     android:minLines="3"
				     android:textColor="#333333"
				     android:textSize="15sp"/>
			</LinearLayout>
			<!-- 操作模块  END-->
		</LinearLayout>
	</ScrollView>
</LinearLayout>