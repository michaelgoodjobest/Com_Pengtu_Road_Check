<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <include layout="@layout/header"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="20dp"
	    android:gravity="center">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_roadid"
	        android:textColor="#0000ff"
	        android:textSize="18sp"
	        android:textStyle="bold"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/txt_roadname"
	        android:textColor="#000000"
	        android:textSize="18sp"
	        android:textStyle="bold"/>
	</LinearLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt_direction"
	    android:textColor="#000000"
	    android:textSize="15sp"
	    android:layout_gravity="center_horizontal"/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt_reportname"
	    android:textColor="#000000"
	    android:textSize="15sp"
	    android:layout_gravity="center_horizontal"/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt_detetime"
	    android:textColor="#a0a0a0"
	    android:textSize="13sp"
	    android:layout_gravity="center_horizontal"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@drawable/list_halving_line">
	</LinearLayout>
	<Gallery 
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:id="@+id/gallery_img_view"
	    android:spacing="10dp"
	    android:gravity="center"
	    android:padding="0dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"/>
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/txt_detailcontent"
	    android:textColor="#a0a0a0"
	    android:textSize="15sp"
	    android:lineSpacingExtra="5dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"/>
</LinearLayout>