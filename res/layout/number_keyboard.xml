<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#00000000" >
    <LinearLayout 
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/corners_white">
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	         <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/txt_keyboard_title"
		        android:textSize="18sp"
		        android:textColor="#000000"
		        android:text=""
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:gravity="center"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:layout_marginTop="2dp"
		        android:background="#eaeaea"/>
	         <LinearLayout
	             android:id="@+id/layout_keyboard_close" 
	             android:layout_width="fill_parent"
	             android:layout_height="35dp"
	             android:orientation="horizontal"
	             android:gravity="right"
	             android:layout_centerVertical="true"
				 android:layout_alignParentRight="true">
	             <ImageView 
				    android:id="@+id/btn_keyboard_close"
				    android:layout_width="20dp"
				    android:layout_height="20dp"
				    android:background="@drawable/dialog_close"
				    android:padding="0dp"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="25dp"
				    android:layout_marginTop="10dp"
				    android:layout_marginRight="10dp"
				    android:layout_marginBottom="10dp"/>
	         </LinearLayout>
		 </RelativeLayout>
		 <TextView 
		     android:layout_width="fill_parent"
		     android:layout_height="40dp"
		     android:id="@+id/txt_num_show"
		     android:textColor="#333333"
		     android:paddingLeft="3dp"
		     android:textSize="20sp"/>
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:background="@drawable/list_halving_line"></LinearLayout>
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"
		     android:orientation="horizontal">
	         <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_1"
		         android:text="1"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
	         <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_2"
		         android:text="2"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
	         <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_3"
		         android:text="3"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_0"
		         android:text="0"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		 </LinearLayout>
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"
		     android:orientation="horizontal"
		     android:layout_marginTop="3dp">
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_4"
		         android:text="4"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_5"
		         android:text="5"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_6"
		         android:text="6"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_sure"
		         android:text="确定"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		 </LinearLayout>
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_weight="1"
		     android:orientation="horizontal"
		     android:layout_marginTop="3dp">
		      <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_7"
		         android:text="7"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_8"
		         android:text="8"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_9"
		         android:text="9"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		     <Button 
		         android:layout_width="fill_parent"
		         android:layout_height="fill_parent"
		         android:id="@+id/btn_keyboard_num_update"
		         android:text="更改"
		         android:textColor="#000000"
		         android:textSize="20sp"
		         android:layout_weight="1"
		         android:layout_margin="2dp"
		         android:background="@drawable/selector_btn_bg"/>
		 </LinearLayout>
	 </LinearLayout>
</LinearLayout>