<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Default" parent="android:Theme">
    	<item name="android:windowNoTitle">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowAnimationStyle">@style/noAnimation</item>  
    </style>
    <!-- 导航界面 菜单按钮样式 -->
	<style name="navigation_button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@null</item>
		<item name="android:drawablePadding">3dp</item>
		<item name="android:shadowColor">#cc000000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>
	<style name="noAnimation">  
        <item name="android:activityOpenEnterAnimation">@null</item>  
        <item name="android:activityOpenExitAnimation">@null</item>  
        <item name="android:activityCloseEnterAnimation">@null</item>  
        <item name="android:activityCloseExitAnimation">@null</item>  
        <item name="android:taskOpenEnterAnimation">@null</item>  
        <item name="android:taskOpenExitAnimation">@null</item>  
        <item name="android:taskCloseEnterAnimation">@null</item>  
        <item name="android:taskCloseExitAnimation">@null</item>  
        <item name="android:taskToFrontEnterAnimation">@null</item>  
        <item name="android:taskToFrontExitAnimation">@null</item>  
        <item name="android:taskToBackEnterAnimation">@null</item>  
        <item name="android:taskToBackExitAnimation">@null</item>  
    </style>
    <style name="AnimationPreview">  
        <item name="android:windowEnterAnimation">@anim/pw_in</item>  
        <item name="android:windowExitAnimation">@anim/pw_out</item>  
    </style>
     <style name="AnimationBigImg">  
        <item name="android:windowEnterAnimation">@anim/pw_bigimg_in</item>  
        <item name="android:windowExitAnimation">@anim/pw_bigimg_out</item>  
    </style>
    <style name="AnimationDiseaseBigImg">  
        <item name="android:windowEnterAnimation">@anim/pw_disease_bigimg_in</item>  
        <item name="android:windowExitAnimation">@anim/pw_disease_bigimg_out</item>  
    </style>
</resources>
